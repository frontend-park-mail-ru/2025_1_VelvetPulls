<div class="container">
    <nav class="sidebar">
        <header class="sidebar__header">
            <img src="menuIcon.svg" alt="Menu" class="sidebar__icon" />
            <div class="sidebar__search">
                <img src="searchIcon.svg" alt="Search" class="sidebar__icon" />
                <p class="sidebar__placeholder">Поиск чата</p>
            </div>
        </header>
        <div class="sidebar__divider"></div>
        <section class="sidebar__chat-list">
            {{#each chats}}
            <div class="chat-item {{#if active}}chat-item--active{{/if}}">
                <img src="{{avatar}}" alt="User avatar" class="chat-item__avatar" />
                <div class="chat-item__info">
                    <h3 class="chat-item__name">{{name}}</h3>
                    <p class="chat-item__preview">{{preview}}</p>
                </div>
                <div class="chat-item__meta">
                    <time class="chat-item__time">{{time}}</time>
                    {{#if unreadCount}}
                    <div class="chat-item__flag">
                        <span class="chat-item__unread-count">{{unreadCount}}</span>
                    </div>
                    {{/if}}
                </div>
            </div>
            {{/each}}
            <div class="sidebar__spacer"></div>
            <footer class="sidebar__footer">
                <button class="sidebar__button">
                    <img src="https://cdn.builder.io/api/v1/image/assets/TEMP/04a1b524c884ffce29c88a1ec38b941230427316b25c57ef392ac66c978536e7?placeholderIfAbsent=true&apiKey=c6af73f4f8d84b399e6c18554da63ac7"
                        alt="New chat" class="sidebar__icon" />
                </button>
            </footer>
        </section>
    </nav>
    <div class="container__divider"></div>
    <main class="main-chat">
        <header class="main-chat__header">
            <img src="https://cdn.builder.io/api/v1/image/assets/TEMP/336e7ec7722af96aa6f68e6147e1aa31fb5e806c7a844019f57b339d350ac07a?placeholderIfAbsent=true&apiKey=c6af73f4f8d84b399e6c18554da63ac7"
                alt="Current user avatar" class="main-chat__avatar" />
            <div class="main-chat__user-info">
                <h2 class="main-chat__name">Ольга Тинькова</h2>
                <p class="main-chat__status">был(а) в сети недавно</p>
            </div>
            <div class="main-chat__spacer"></div>
            <button class="main-chat__action">
                <img src="https://cdn.builder.io/api/v1/image/assets/TEMP/12de0946711920305bf7423cd1583bd97f39d87f4f1129a3e7dfefa676af7da0?placeholderIfAbsent=true&apiKey=c6af73f4f8d84b399e6c18554da63ac7"
                    alt="Action 1" class="main-chat__icon" />
            </button>
            <button class="main-chat__action">
                <img src="https://cdn.builder.io/api/v1/image/assets/TEMP/07e3a7419adaaa4caf6c8e55c53df22de388d062fd87474b853f1847234659e4?placeholderIfAbsent=true&apiKey=c6af73f4f8d84b399e6c18554da63ac7"
                    alt="Action 2" class="main-chat__icon" />
            </button>
        </header>

        <section class="main-chat__container">
            <div class="main-chat__messages">
                <p class="main-chat__empty">
                    Пока нет сообщений... Отправьте Ваше первое сообщение.
                </p>
            </div>
            <div class="main-chat__divider"></div>
            <footer class="main-chat__input-container">
                <button class="main-chat__attachment-button">
                    <img src="https://cdn.builder.io/api/v1/image/assets/TEMP/b94e218ff03d58b207ef429ccabac33cc1ca0a2b0a1e678fea80f1129e9162b6?placeholderIfAbsent=true&apiKey=c6af73f4f8d84b399e6c18554da63ac7"
                        alt="Add attachment" class="main-chat__icon" />
                </button>
                <div class="main-chat__input-wrapper">
                    <div class="main-chat__input-field">
                        <p class="main-chat__placeholder">Написать</p>
                        <img src="https://cdn.builder.io/api/v1/image/assets/TEMP/70c47b3a5aeb1c4d90a5ffd8e3b3bfd0296c36c7db7a71135a2cca20da23d699?placeholderIfAbsent=true&apiKey=c6af73f4f8d84b399e6c18554da63ac7"
                            alt="Emoji" class="main-chat__emoji-icon" />
                    </div>
                </div>
                <button class="main-chat__send-button">
                    <img src="https://cdn.builder.io/api/v1/image/assets/TEMP/d94c0babdfa680b96bb9970cd04743e0f36c6720d7b64109222e155038a32bc9?placeholderIfAbsent=true&apiKey=c6af73f4f8d84b399e6c18554da63ac7"
                        alt="Send message" class="main-chat__send-icon" />
                </button>
            </footer>
        </section>
    </main>
</div>