<div class="message-container">
    <div class="message_group">
        <div class="message__avatar-container">
            <img src="img/Keftegram.png" alt="Avatar" class="avatar">
        </div>
        <div class="message_dialog">
            <div class="message__author">{{username}}</div>
            <div class="message__content">
                {{body}}
            </div>
            <div class="message__meta">
                <div class="message__time">{{sentAt}}</div>
                <img src="icons/double-check.svg" alt="Read" class="message__status">
            </div>
        </div>
    </div>
</div>
