<div class="chat-container">
    {{!-- Окно чата --}}
    <section class="chat">
        <div>
            {{!-- Заголовок --}}
            <header class="chat-header">
                {{!-- Закрыть чат --}}
                <div id="close-chat" class="button">
                    <img src="icons/close.svg" alt="Back" class="icon"></img>
                </div>

                {{!-- Аватар --}}
                <img src="{{avatarSrc}}" alt="Avatar" class="chat-header__avatar">
                
                {{!-- Информация о чате --}}
                <div class="chat-header__info">
                    <div class="chat-header__full-name">{{fullName}}</div>
                    <div class="chat-header__online-status">был(а) в сети недавно</div>
                </div>
                
                {{!-- Добавить в избранное --}}
                {{!-- <button class="button">
                    <img src="icons/Flag.svg" alt="Favourite" class="icon">
                </button> --}}
                
                {{!-- Опции --}}
                {{!-- <button class="button">
                    <img src="icons/Options.svg" alt="Options" class="icon">
                </button> --}}

                {{!-- Удалить чат --}}
                {{!-- <button id="delete-chat-button" class="button">
                    <img src="icons/delete.svg" alt="Delete" class="icon">
                </button> --}}
            </header>
            
            {{!-- Горизонтальный разделитель --}}
            <div class="horizontal-divider"></div>
        </div>
        
        {{!-- Сообщения --}}
        <section class="sidebar-list scrollable">
            <div class="message-container">
                <div class="message_my">
                    <div class="message__content">
