<div class="chat-container">
    {{!-- Окно чата --}}
    <section class="chat">
        <div>
            {{!-- Заголовок --}}
            <header class="chat-header">
                {{!-- Закрыть чат --}}
                <div id="close-chat" class="button">
                    <img src="icons/close.svg" alt="Back" class="icon"></img>
                </div>

                {{!-- Аватар --}}
                <img src="{{avatarSrc}}" alt="Avatar" class="chat-header__avatar">
                
                {{!-- Информация о чате --}}
                <div class="chat-header__info">
                    <div class="chat-header__full-name">{{title}}</div>
                    <div class="chat-header__online-status">
                        <span id="group-header__count-members">{{countUsers}}</span> участников
                    </div>
                </div>
                
                {{!-- Добавить в избранное --}}
                {{!-- <button class="button">
                    <img src="icons/Flag.svg" alt="Favourite" class="icon">
                </button> --}}
                
                {{!-- Опции --}}
                {{!-- <button class="button">
                    <img src="icons/Options.svg" alt="Options" class="icon">
                </button> --}}
            </header>
            
            {{!-- Горизонтальный разделитель --}}
            <div class="horizontal-divider"></div>
        </div>
        <div class="chat-container__main">
            {{!-- Сообщения --}}
            <div class="sidebar-header__search" id="search_msgs">
            <img src="icons/Search.svg" alt="Search" class="icon">
            <input type="text" class="sidebar-header__search-input" placeholder="Поиск сообщений">
            </div>
            <div id="search_msgs_res">
            
            </div>
            <section id="messages" class="sidebar-list scrollable">
                {{!-- Здесь будут сообщения --}}
            </section>
            
            {{!-- Ввод сообщения --}}
            <div class="chat-input-container">
                <div class="chat-input-container__input-wrapper">
                    {{!-- Вложения --}}
                    <button class="button">
                        <img src="icons/PaperClip.svg" alt="Add attachment" class="icon">
                    </button>
                    
                    {{!-- Поле для ввода --}}
                    <input id="send-message-input" type="text" placeholder="Написать" class="chat-input-container__input">
                    
                    {{!-- Эмодзи --}}
                    <button class="button">
                        <img src="icons/Emoji.svg" alt="Emoji" class="icon">
                    </button>
                </div>
                
                {{!-- Отправить --}}
                <button id="send-message-button" class="button">
                    <img src="icons/Send.svg" alt="Send message" class="icon">
                </button>
                
            </div>
        </div>
    </section>
    
    {{!-- Вертикальный разделитель --}}
    <div class="vertical-divider"></div>
</div>