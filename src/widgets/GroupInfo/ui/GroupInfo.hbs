<div class="sidebar">
    {{!-- Заголовок --}}
    <header class="sidebar-header">
        <div id="close-chat-info" class="button">
            <img src="icons/close.svg" alt="Back" class="icon"></img>
        </div>
        
        <div class="sidebar-header__title">Информация</div>
    </header>

    <div class="horizontal-divider"></div>

    <!-- Просмотр профиля -->
    <main class="group-info">
        {{!-- Аватар --}}
        <section class="avatar-container">
            <div class="avatar-container__user-info">
                <div class="user-info__full-name">{{title}}</div>
                <div class="user-info__online-status">{{membersCount}} участников</div>
            </div>

            <div class="avatar-container__square-image">
                <img class="avatar-container__image" src="{{groupPhotoUrl}}" alt="Avatar">
            </div>
        </section>

        {{!-- Детали профиля --}}
        <section class="sidebar-list">
            {{!-- Ссылка --}}
            <div class="detail-item">
                <img src="" alt="Link" class="icon"></img>
                <div class="sidebar-list__item-info">
                    <div class="detail-item__value">Тут будет ссылка на чат</div>
                    <div class="detail-item__label">Ссылка</div>
                </div>
            </div>

            {{!-- О себе --}}
            <div class="detail-item">
                <img src="icons/bell.svg" alt="Bell" class="icon"></img>
                <div class="sidebar-list__item-info">
                    <div class="detail-item__value">Уведомления</div>
                </div>
            </div>
        </section>

        <div class="horizontal-list">
            <div class="horizontal-list__item horizontal-list__item_active">Участники</div>
            <div class="horizontal-list__item">Медиа</div>
            <div class="horizontal-list__item">Файлы</div>
            <div class="horizontal-list__item">Ссылки</div>
        </div>
    </main>
</div>
